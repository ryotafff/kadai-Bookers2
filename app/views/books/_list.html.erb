

<div class="container">
 <div class="row">
 <div class="col-xs-3">
    <h2>User info</h2>

 <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
<div class="profile-container">
  <table class="table">
  <tr>
　<th>name</th>
　<th><%= current_user.name %></th>
　</tr>
  <tr>
  <th>introduction</th>
　<th><%= current_user.introduction %></th>
  </tr>
  </table>

  <%= link_to edit_user_path(current_user), class: "btn btn-default glyphicon glyphicon-wrench" do %>
  <i class="fa fa-wrench"></i>
  <% end %>
</div>



<h2>New book</h2>




<% if book.errors.any? %>
  <div class="alert alert-danger">
      The form contains <%= pluralize(book.errors.count, "error") %>.
    </div>
  <div class="alert alert-warning">
    <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>





<%= form_for(book) do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>

<br><%= f.submit 'Create Book' %></br>
<% end %>

</form>
</div>